{
  "compilerOptions": {
    "strict": true
  },

  "fmt": {
    "files": {
      "include": ["enities/", "tests/", "examples/"],
      "exclude": [
        ".vacode",
        ".idea",
        ".fleet",
        ".git"
      ]
    }
  },
  "options": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },

  "test": {
    "files": {
      "include": ["tests/"]
    }
  }
}
